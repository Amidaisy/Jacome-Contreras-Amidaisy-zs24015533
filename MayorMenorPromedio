import java.util.Scanner;
public class MayorMenorPromedio {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.print("Ingrese el valor 1: ");
        double valor1 = sc.nextDouble();
        System.out.print("Ingrese el valor 2: ");
        double valor2 = sc.nextDouble();
        System.out.print("Ingrese el valor 3: ");
        double valor3 = sc.nextDouble();

        double mayor = Math.max(Math.max(valor1, valor2), valor3);
        double menor = Math.min(Math.min(valor1, valor2), valor3);
        double promedio = (valor1 + valor2 + valor3) / 3;

        if (valor1 == valor2 && valor2 == valor3) {
            System.out.println("Los tres valores son iguales");
        } else {
            System.out.println("El valor mayor es: " + mayor);
            System.out.println("El valor menor es: " + menor);
            System.out.println("El promedio es: " + String.format("%.2f", promedio));
        }
    }
}
