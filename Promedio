import java.util.Scanner;

public class Promedio {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.print("Ingrese la calificación de la materia 1: ");
        double materia1 = sc.nextDouble();
        System.out.print("Ingrese la calificación de la materia 2: ");
        double materia2 = sc.nextDouble();
        System.out.print("Ingrese la calificación de la materia 3: ");
        double materia3 = sc.nextDouble();

        double promedio = (materia1 + materia2 + materia3) / 3;

        System.out.println("Calificaciones:");
        System.out.println("Materia 1: " + materia1);
        System.out.println("Materia 2: " + materia2);
        System.out.println("Materia 3: " + materia3);
        System.out.println("Promedio general: " + String.format("%.2f", promedio));
    }
}
